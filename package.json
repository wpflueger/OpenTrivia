{
  "name": "opentriiva",
  "private": true,
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "bun run --filter='*' build",
    "dev": "bun run --filter=web dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "bun run --filter='*' test",
    "test:watch": "bun run --filter='*' test:watch",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "trustedDependencies": [
    "esbuild"
  ]
}
